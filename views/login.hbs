<div class="login-wrapper">
    <form
        class="login-form"
        action="/login"
        autocomplete="off"
        method="POST"
    >
        <input
            class="login-input"
            type="text"
            name="user"
            placeholder="Username"
            autofocus
            required
        >
        <input
            class="login-input"
            type="password"
            name="password"
            placeholder="Password"
            required
        >
        <input
            class="login-input submit"
            type="submit"
            value="Start Flexin'"
        >
    </form>
</div>

<div class="message">
    <span class="message-content">
        {{message}}
    </span>
</div>
